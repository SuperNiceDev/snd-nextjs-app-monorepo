{
  "name": "snd-nextjs-app-monorepo",
  "description": "A monorepo boilerplate with Next.js, Strapi CMS and a React library",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "src/apps/snd-nextjs-app",
    "src/apps/snd-strapi-cms",
    "src/packages/*"
  ],
  "scripts": {
    "nextjs:dev": "yarn workspace snd-nextjs-app dev",
    "nextjs:build": "yarn workspace snd-nextjs-app build",
    "nextjs:start": "yarn workspace snd-nextjs-app start",
    "nextjs:build-standalone": "yarn workspace snd-nextjs-app build-standalone",
    "nextjs:start-standalone": "yarn workspace snd-nextjs-app start-standalone",
    "strapi:dev": "yarn workspace snd-strapi-cms dev",
    "react-lib:dev": "yarn workspace snd-react-lib dev",
    "react-lib:build": "yarn workspace snd-react-lib build",
    "react-lib:story": "yarn workspace snd-react-lib story",
    "react-lib:test": "yarn workspace snd-react-lib test",
    "removeNodeModules": "rm -rf ./node_modules && yarn workspace snd-nextjs-app removeNodeModules && yarn workspace snd-strapi-cms removeNodeModules && yarn workspace snd-react-lib removeNodeModules"
  },
  "devDependencies": {},
  "dependencies": {},
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
